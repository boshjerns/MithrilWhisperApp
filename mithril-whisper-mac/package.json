{
  "name": "whisper-voice-assistant",
  "version": "1.0.0",
  "description": "Real-time voice-to-text application with Whisper integration",
  "main": "build/main/main.js",
  "scripts": {
    "start": "cross-env DEV_SERVER_PORT=37843 concurrently \"npm run start:renderer\" \"wait-on http://localhost:37843 && npm run start:main\"",
    "start:main": "npm run build:main && electron .",
    "start:renderer": "webpack serve --mode development --config webpack.renderer.config.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --mode production --config webpack.renderer.config.js",
    "build:main": "webpack --mode production --config webpack.main.config.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:install": "npm run package && npm run open:installer",
    "build:install": "./scripts/build-and-install.sh",
    "open:installer": "find dist -name '*.pkg' -exec open {} \\; || (echo 'No PKG found in dist/, building...' && npm run package && find dist -name '*.pkg' -exec open {} \\;)",
    "dist": "npm run build && electron-builder",
    "dev": "npm start",
    "test": "vitest run",
    "test:watch": "vitest",
    "dist:portable": "npx electron-packager . \"mithril whisper Portable\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=logo1.ico --ignore=\"^/temp($|/)\" --ignore=\"^/src($|/)\" --ignore=\"^/installer($|/)\" --ignore=\"^/dist($|/)\" --ignore=\\\"\\.wav($|\\.txt$)\\\" --ignore=\\\"\\.mp3$\\\" --ignore=\\\"\\.flac$\\\" --ignore=\\\"\\.ogg$\\\"",
    "dist:installer": "iscc installer/whisperv1.iss"
  },
  "keywords": [
    "voice",
    "speech-to-text",
    "whisper",
    "electron",
    "ai"
  ],
  "author": "Voice Assistant Team",
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv": "^17.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-osx-sign": "^0.6.0",
    "html-webpack-plugin": "^5.5.3",
    "png-to-ico": "^2.1.8",
    "style-loader": "^3.3.3",
    "vitest": "^1.6.0",
    "wait-on": "^7.0.1",
    "webpack": "^5.101.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "chocolatey": "^0.0.1",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0",
    "loudness": "^0.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supabase": "^2.33.9"
  },
  "optionalDependencies": {
    "win-audio": "^3.0.5"
  },
  "build": {
    "appId": "com.voiceassistant.mithrilwhisper",
    "productName": "MithrilWhisper",
    "directories": {
      "output": "dist"
    },
    "afterSign": "build/after-sign.js",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "README.md",
      "LICENSE*",
      "logo1.ico"
    ],
    "extraMetadata": {
      "PrivacyInfo": "build/PrivacyInfo.xcprivacy"
    },
    "asarUnpack": [
      "node_modules/win-audio/**",
      "whisper-cpp/**"
    ],
    "extraResources": [
      {
        "from": "whisper-cpp",
        "to": "whisper-cpp",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/mac-resources/key-injector",
        "to": "key-injector"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "pkg",
          "arch": ["arm64", "x64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Used to transcribe your speech.",
        "NSAppleEventsUsageDescription": "Used to paste transcriptions into the frontmost app via System Events."
      },
      "notarize": {
        "teamId": "D763V8H675"
      }
    },
    "win": {
      "target": "nsis",
      "sign": false,
      "icon": "logo1.ico"
    },
    "pkg": {
      "installLocation": "/Applications",
      "allowAnywhere": false,
      "allowCurrentUserHome": false,
      "allowRootDirectory": false,
      "isRelocatable": false,
      "isVersionChecked": true
    },
    "dmg": {
      "title": "MithrilWhisper",
      "icon": "build/icon.icns"
    }
  }
}
